<!DOCTYPE html>
<html>
  <head>
    <title>ECSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/174cba21f6.js" crossorigin="anonymous"></script><!--Fontawesome用-->
  </head>

  <body>
    <header class="border-bottom">
      <nav class="navbar">

        <div class="title navbar-brand">
          <%= link_to "渋川屋", root_path, class:"text-dark" %>
        </div>
        <% if admin_signed_in? %>
          <ul class="nav">
            <li>
              <%= link_to "商品新規登録", new_admin_item_path, class:"nav-btn-left btn btn-outline-primary text-dark" %>
            </li>

            <li>
              <%= link_to "商品一覧", admin_items_path, class:"nav-btn-center-left btn btn-outline-primary text-dark" %>
            </li>

            <li>
              <%= link_to "会員一覧", root_path, class:"nav-btn-center-left btn btn-outline-primary text-dark" %>
            </li>

            <li>
              <%= link_to "注文履歴一覧", admin_root_path, class:"nav-btn-center-right btn btn-outline-primary text-dark" %>
            </li>

            <li>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"nav-btn-right btn btn-outline-primary text-dark" %>
            </li>
          </ul>
        <% else %>
          <ul class="nav">
            <li>
              <%= link_to "About", about_path, class:"nav-btn-left btn btn-outline-primary text-dark" %>
            </li>

            <li>
              <%= link_to "商品一覧", root_path, class:"nav-btn-center-left btn btn-outline-primary text-dark" %>
            </li>

            <li>
              <%= link_to "新規登録", new_customer_registration_path, class:"nav-btn-center-right btn btn-outline-primary text-dark" %>
            </li>

            <li>
              <%= link_to "ログイン", new_customer_session_path, class:"nav-btn-right btn btn-outline-primary text-dark" %>
            </li>
          </ul>
        <% end %>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer class="border-top">
      <!--取り扱う人の名前でも後で入れとく-->
    </footer>
  </body>
</html>
