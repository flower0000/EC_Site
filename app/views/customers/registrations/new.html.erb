<div class="container">

  <h4>新規会員登録</h4>
  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %><!--ここでのurlはpostメソッド-->
    <%= render "customers/shared/error_messages", resource: resource %>
    <div class="d-flex flex-row">

      <div class="field" style="width:25%">
        <div class="user_data_name">名前</div>
        <div class="user_data_name">フリガナ</div>
        <div class="user_data_name">メールアドレス</div>
        <div class="user_data_name">郵便番号(ハイフンなし)</div>
        <div class="user_data_name">住所</div>
        <div class="user_data_name">電話番号</div>
        <div class="user_data_name">パスワード6文字以上</div>
        <div class="user_data_name">パスワード確認用</div>
      </div>

      <div class="field" style="width:50%">
        <%= f.text_field :last_name, autofocus: true, placeholder: "姓", class:"input_form_margin" %><%= f.text_field :first_name, autofocus: true, placeholder: "名", class:"input_form_margin" %><br>
        <%= f.text_field :last_name_kana, autofocus: true, placeholder: "セイ", class:"input_form_margin" %><%= f.text_field :first_name_kana, autofocus: true, placeholder: "メイ", class:"input_form_margin" %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input_form_margin" %><br>
        <%= f.text_field :postal_code, autofocus: true, class:"input_form_margin" %><br>
        <%= f.text_field :address, autofocus: true, class:"input_form_margin" %><br>
        <%= f.text_field :telephone_number, autofocus: true, class:"input_form_margin" %><br>

        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class:"input_form_margin" %><br>

        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input_form_margin" %><br>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>

  <% end %>

  <h4 class="mt-5">既に登録済みの方</h4>
  <%= render "customers/shared/links" %>からログインしてください<!--render "customers/shared/links"は部分テンプレートですよ-->

</div>