<div class="container">
  <div class="col-12 offset-4">
    <h2>管理者ログイン</h2>

    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
      <div class="field">
        <%= f.label :Eメール %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "xxxyyyzzz@sample.co.jp",size: "40" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "admins/shared/links" %>
  </div>
</div>
